@using Shepherd.Web.ViewModels
@model MemberDetailsViewModel

@{
    ViewBag.Title = "Member Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Member Details</h2>

@using (Html.BeginForm("Update", "Members", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{	
	@Html.HiddenFor(_ => _.MemberId);
	
	<div class="form-group">
		@Html.LabelFor(_ => _.FirstName, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(_ => _.FirstName, new { @class = "form-control" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(_ => _.LastName, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(_ => _.LastName, new { @class = "form-control" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(_ => _.MiddleName, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(_ => _.MiddleName, new { @class = "form-control" })
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" class="btn btn-default" value="Update" />
		</div>
	</div>
}