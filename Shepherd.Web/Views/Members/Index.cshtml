@using Shepherd.BusinessLogic.Entities.Members
@model MemberList

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Members List</h3>

<div id="member-list">
	<table class="grid">
		<thead>
			<tr>
				<th>Name</th>
				<th>Age</th>
				<th>Status</th>
			</tr>
		</thead>
		<tbody>
			@if (Model.Items != null)
			{
				foreach (var member in Model.Items)
				{
					<tr>
						<td>@Html.ActionLink(member.Name, "Details", new { id = member.MemberId })</td>
						<td>@member.AgeInSpirit</td>
						<td></td>
					</tr>
				}
			}
		</tbody>
	</table>
</div>